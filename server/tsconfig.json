{
  // extends: "../../tsconfig.base.json", // Comment out extends if no base config exists
  "compilerOptions": {
    "target": "ES2016", 
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",              // Root is just server's source
    "composite": true,            // Enable being part of composite build
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",              // For resolving paths below
    "paths": { 
      "@/*": ["*"],
      "@server/*": ["*"],
      "@shared/*": ["../../shared/src/*"] // Path relative to baseUrl
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../shared" }       // Reference the shared project
  ]
  // Removed references
}

{
  "compilerOptions": {
    "target": "ES2016", 
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@server/*": ["src/*"],
      "@shared/*": ["../shared/src/*"] 
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

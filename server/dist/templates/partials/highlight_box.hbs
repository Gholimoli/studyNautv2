{{!-- 
  Partial: highlight_box.hbs
  Context: Assumes 'content' field contains the text. Optional 'title'.
  Description: Renders content in a visually distinct box.
--}}
{{#if content}}
<div class="p-4 my-4 border border-yellow-300 rounded-md bg-yellow-50 shadow-sm">
    {{#if title}}
        <p class="font-semibold text-yellow-800 mb-2">{{title}}</p>
    {{/if}}
    <div class="text-yellow-700">
        {{{content}}}
    </div>
</div>
{{/if}} 